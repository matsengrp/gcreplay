manifest {
    description = 'gcreplay analysis workflow'
    nextflowVersion = '>= 20.07.0'
}

// PIPELINE KNOBS
params{
    foo = false
}

profiles {
    
    standard {}
   
    docker {
        docker.enabled = true
    }

    fred_hutch_rhino {

        singularity {
            enabled = true
            autoMounts = true
            cacheDir = 'singularity_cache' 
            //runOptions = '-W /tmp/'
            runOptions = '--contain -W /tmp/'
        }

        process {
            executor = 'slurm'
            queue = 'campus-new'
            cpus = 4
            memory = 4.GB
            time = '1h'
            clusterOptions = '-A matsen_e --exclude=gizmok114'
            cacheDir = '/fh/scratch/delete30/matsen_e/jgallowa/temp/containers/'
            withLabel: multithread { cpus = 8 }
            withLabel: mem_xlarge { memory = 64.GB }
        }
    }
}
