manifest {
    description = 'gcreplay analysis workflow'
    nextflowVersion = '>= 20.07.0'
}

// Always write a pipeline trace (if not specified run command)
trace {
    enabled = true
    overwrite = true
    file = 'pipeline_trace.txt'
    fields = 'task_id,name,status,exit,realtime,%cpu,rss,workdir'
}

// Always write a pipeline report (if not specified run command)
report {
    enabled = true
    overwrite = true
    file = 'pipeline_report.html'
}

workDir = '/fh/scratch/delete30/matsen_e/nextflow/work/'

env {
    TMPDIR="\$TMPDIR"
}

profiles {
    
    docker {
        docker.enabled = true
    }

    fred_hutch_rhino {
        
        trace {
            overwrite = true
            enabled = true
            file = 'pipeline_trace.txt'
            fields = 'task_id,name,status,exit,realtime,%cpu,rss,workdir'
        }

        report {
            overwrite = true
            enabled = true
        }

        apptainer {
            enabled = true
            autoMounts = true
            cacheDir = '/fh/scratch/delete30/matsen_e/jgallowa/containers'
            runOptions = '--containall -B \$TMPDIR'
        }

        process {
            executor = 'slurm'
            queue = 'campus-new'
            clusterOptions = '-A matsen_e'
            cpus = 4
            memory = 4.GB
            time = '2h'
            errorStrategy = 'retry'
            maxRetries = 3

            withLabel: small {
                cpus = 1
                memory= 8.GB
                time = '15m'
            }

            withLabel: threaded {
                cpus = 16
                memory = 16.GB
                time = '5h'
            }

            withLabel: longtime {
                cpus = 8
                memory = 8.GB
                time = '5h'
            }

            withLabel: multithread { 
                cpus = 8    
                memory = 16.GB
                time = '5h'
            }

            withLabel: small_multithread { 
                cpus = 4    
                memory = 4.GB
                time = '5m'
            }

            withLabel: mem_large { 
                memory = 48.GB 
                time = '4h'
            }

            withLabel: large { 
                cpus = 24
                memory = 16.GB 
                time = '5h'
            }
        }
    }
}
