manifest {
    description = 'gcreplay analysis workflow'
    nextflowVersion = '>= 20.07.0'
}

// Always write a pipeline trace (if not specified run command)
trace {
    enabled = true
    overwrite = true
    file = 'pipeline_trace.txt'
    fields = 'task_id,name,status,exit,realtime,%cpu,rss,workdir'
}

// Always write a pipeline report (if not specified run command)
report {
    enabled = true
    overwrite = true
    file = 'pipeline_report.html'
}


profiles {
    
    quokka {

        singularity {
            enabled = true
            autoMounts = true
            runOptions = '--containall --no-home'
            cacheDir = 'containers/'
        }

    }
   
    docker {
        docker.enabled = true
        process.cpus = 4
    }

    ermine {
        // ermine doesn't have new enough Nextflow version to use singularity
        singularity {
            enabled = true
            cacheDir = '/fh/scratch/delete30/matsen_e/jgallowa/containers'
            autoMounts = true
            runOptions = '--containall --no-home'
        }

    }

    fred_hutch_rhino {
        
        trace {
            overwrite = true
            enabled = true
            file = 'pipeline_trace.txt'
            fields = 'task_id,name,status,exit,realtime,%cpu,rss,workdir'
        }

        report {
            overwrite = true
            enabled = true
        }

        apptainer {
            enabled = true
            autoMounts = true
            cacheDir = '/fh/scratch/delete30/matsen_e/jgallowa/containers'
            runOptions = ''
        }

        process {
            executor = 'slurm'
            queue = 'campus-new'
            clusterOptions = '-A matsen_e'
            cpus = 4
            memory = 4.GB
            time = '2h'

            withLabel: small {
                queue = 'restart-new'
                clusterOptions = '-A matsen_e --qos=restart'
                cpus = 1
                memory= 2.GB
                time = '5m'
            }

            withLabel: threaded {
                cpus = 16
                memory = 16.GB
                time = '5h'
            }

            withLabel: longtime {
                cpus = 8
                memory = 8.GB
                time = '5h'
            }

            withLabel: multithread { 
                cpus = 8    
                memory = 16.GB
                time = '5h'
            }

            withLabel: small_multithread { 
                cpus = 4    
                memory = 2.GB
                time = '5m'
            }

            withLabel: mem_large { 
                memory = 48.GB 
                time = '4h'
            }

            withLabel: large { 
                cpus = 24
                memory = 16.GB 
                time = '5h'
            }
        }
    }
}
