manifest {
    description = 'gcreplay analysis workflow configuration'
    nextflowVersion = '>= 20.07.0'
}

// Always write a pipeline trace (if not specified in run command)
trace {
    enabled = true
    overwrite = true
    file = 'pipeline_trace.txt'
    fields = 'task_id,name,status,exit,realtime,%cpu,rss,workdir'
}

// Always write a pipeline report (if not specified run command)
report {
    enabled = true
    overwrite = true
    file = 'pipeline_report.html'
}

workDir = '/fh/scratch/delete30/matsen_e/nextflow/work/'

profiles {
    
    docker {
        docker.enabled = true
    }

    fred_hutch_rhino {
        
        trace {
            overwrite = true
            enabled = true
            file = 'pipeline_trace.txt'
            fields = 'task_id,name,status,exit,realtime,%cpu,rss,workdir'
        }

        report {
            overwrite = true
            enabled = true
        }

        apptainer {
            enabled = true
            autoMounts = true
            cacheDir = '/fh/scratch/delete30/matsen_e/jgallowa/containers'
            runOptions = '--containall --no-home -B ${TMPDIR}:/tmp'
        }

        process {
            env.TMPDIR="\$TMPDIR"
            executor = 'slurm'
            queue = 'short'
            clusterOptions = '-A matsen_e'
            cpus = 4
            memory = 4.GB
            time = '1h'
            errorStrategy = 'retry'
            maxRetries = 3
        }
    }
}
