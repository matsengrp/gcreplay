manifest {
    description = 'gcreplay analysis workflow'
    nextflowVersion = '>= 20.07.0'
}


profiles {
    
    quokka {
 
        trace {
            enabled = true
            file = 'pipeline_trace.txt'
            fields = 'task_id,name,status,exit,realtime,%cpu,rss,workdir'
        }

        singularity {
            enabled = true
            autoMounts = true
            runOptions = '--contain -W /tmp/'
            cacheDir = 'containers/'
        }

    }
   
    docker {
        docker.enabled = true
        process.cpus = 4
    }

    fred_hutch_rhino {
 
        trace {
            overwrite = true
            enabled = true
            file = 'pipeline_trace.txt'
            fields = 'task_id,name,status,exit,realtime,%cpu,rss,workdir'
        }

        singularity {
            enabled = true
            autoMounts = true
            runOptions = '--contain -W /tmp/'
            cacheDir = 'containers/'
        }

        process {
            executor = 'slurm'
            queue = 'campus-new'
            cpus = 4
            memory = 4.GB
            time = '2h'
            clusterOptions = '-A matsen_e'
            withLabel: small {
                cpus = 2
                memory= 2.GB
                time = '1h'
            }
            withLabel: longtime {
                cpus = 8
                memory = 8 
                time = '5h'
            }
            withLabel: multithread { 
                cpus = 8    
                memory = 16.GB
                time = '5h'
            }
            withLabel: mem_large { 
                memory = 32.GB 
                time = '2h'
            }
            withLabel: large { 
                cpus = 24
                memory = 16.GB 
                time = '5h'
            }
        }
    }
}
